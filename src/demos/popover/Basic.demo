<!-- DEMO -->
<script>
	let popover = document.getElementById('menu-demo-popover');
	popover.addEventListener('click', (e) => {
		if (e.target.tagName === 'A') {
			popover.hidePopover();
		}
	});
</script>

<button popovertarget="menu-demo-popover">Sort By</button>
<div popover id="menu-demo-popover">
	<ul class="menu-demo">
		<li><a href="?order=desc">Newest To Oldest</a></li>
		<li><a href="?order=asc">Oldest To Newest</a></li>
	</ul>
</div>
